<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" 
		 xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 					 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

	
	<!-- 현재 web application에서 받아들이는 모든 요청에 대해서 
		appServlet이라는 이름으로 정의된 servlet을 사용한다는 의미 -->
	<!-- The mapping for the default servlet -->
	<servlet-mapping>
		<servlet-name>appSerlvet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- 요청 정보를 분석해서 controller를 선택하는 servlet 지정 -->
	<servlet>
		<servlet-name>appSerlvet</servlet-name>
		<!-- Spring MVC에서 제공하는 기본 Servlet 지정 -->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- Spring MVC 설정을 위한 xml 파일 지정 -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/servlet-context.xml-</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- Spring이 자동으로 생성해주는 Bean -->
	<!-- Bean을 정의하는 xml 파일 지정하기 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/config/root-context.xml</param-value>
	</context-param>
	
	<!-- listener 설정하기 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderlistener</listener-class>
	</listener>
	
	<!-- Parameter Encoding Filter 설정하기 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
		</init-param>
	</filter>
	
	
	
	
	
</web-app>